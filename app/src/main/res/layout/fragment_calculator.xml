<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:padding="@dimen/dp_20">

    <TextView
        android:id="@+id/textResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="right"
        android:hint="0"
        android:paddingBottom="@dimen/dp_100"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dp_100"
        tools:ignore="MissingConstraints" />

    <TableRow
        android:id="@+id/layoutOne"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_marginTop="@dimen/d_30"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/textResult">

        <Button
            android:id="@+id/buttonDeleteAll"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:padding="@dimen/dp_20"
            android:text="@string/calc_ac"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/dp_32" />

        <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:padding="@dimen/d_20"
            android:src="@drawable/ic_delete" />

        <Button
            android:id="@+id/buttonEuclidDivision"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:padding="@dimen/dp_20"
            android:text="@string/calc_eucliddivide"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/dp_32" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:padding="@dimen/dp_20"
            android:text="@string/calc_divide"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/dp_32" />

    </TableRow>

    <TableRow
        android:id="@+id/layoutTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/layoutOne">

        <Button
            android:id="@+id/buttonSeven"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:padding="@dimen/dp_20"
            android:text="@string/calc_seven"
            android:textColor="@color/colorLightGray"
            android:textSize="@dimen/dp_32" />

        <Button
            android:id="@+id/buttonEight"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:padding="@dimen/dp_20"
            android:text="@string/calc_eight"
            android:textColor="@color/colorLightGray"
            android:textSize="@dimen/dp_32" />

        <Button
            android:id="@+id/buttonNine"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:padding="@dimen/dp_20"
            android:text="@string/calc_nine"
            android:textColor="@color/colorLightGray"
            android:textSize="@dimen/dp_32" />

        <Button
            android:id="@+id/buttonMutiple"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:padding="@dimen/dp_20"
            android:text="@string/calc_mutiple"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/dp_32" />
    </TableRow>

    <TableRow
        android:id="@+id/layoutThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/layoutTwo">

        <Button
            android:id="@+id/buttonFour"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:padding="@dimen/d_20"
            android:text="@string/calc_four"
            android:textColor="@color/colorLightGray"
            android:textSize="@dimen/dp_32" />

        <Button
            android:id="@+id/buttonFive"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:padding="@dimen/dp_20"
            android:text="@string/calc_five"
            android:textColor="@color/colorLightGray"
            android:textSize="@dimen/dp_32" />

        <Button
            android:id="@+id/buttonSix"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:padding="@dimen/dp_20"
            android:text="@string/calc_six"
            android:textColor="@color/colorLightGray"
            android:textSize="@dimen/dp_32" />

        <Button
            android:id="@+id/buttonSub"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:padding="@dimen/dp_20"
            android:text="@string/calc_minus"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/dp_32" />
    </TableRow>

    <TableRow
        android:id="@+id/layoutFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/layoutThree">

        <Button
            android:id="@+id/buttonOne"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:padding="@dimen/dp_20"
            android:text="@string/calc_one"
            android:textColor="@color/colorLightGray"
            android:textSize="@dimen/dp_32" />

        <Button
            android:id="@+id/buttonTwo"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:padding="@dimen/dp_20"
            android:text="@string/calc_two"
            android:textColor="@color/colorLightGray"
            android:textSize="@dimen/dp_32" />

        <Button
            android:id="@+id/buttonThree"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:padding="@dimen/dp_20"
            android:text="@string/calc_three"
            android:textColor="@color/colorLightGray"
            android:textSize="@dimen/dp_32" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:padding="@dimen/dp_20"
            android:text="@string/calc_add"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/dp_32" />
    </TableRow>

    <TableRow
        android:id="@+id/layoutFive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/layoutFour">


        <Button
            android:id="@+id/buttonZero"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorBlack"
            android:padding="@dimen/d_20"
            android:text="@string/calc_zero"
            android:textColor="@color/colorLightGray"
            android:textSize="@dimen/dp_32" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:padding="@dimen/dp_20"
            android:text="@string/calc_dot"
            android:textColor="@color/colorLightGray"
            android:textSize="@dimen/dp_32" />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlack"
            android:padding="@dimen/dp_20"
            android:text="@string/calc_equal"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/dp_32" />
    </TableRow>
</androidx.constraintlayout.widget.ConstraintLayout>
